<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ferrovil.app">
    
    <!-- Permisos para funcionalidades de ferretería -->
    <uses-feature android:name="android.hardware.camera"
                  android:required="false"/>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ferrovil_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ferrovil_round_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.Ferrovil">
        
        <!-- Actividad para historial de stock (reemplaza HistorialTasa) -->
        <activity
            android:name=".activities.HistorialStockActivity"
            android:parentActivityName=".activities.MainActivity" />
            
        <!-- Actividad para historial de ventas -->
        <activity
            android:name=".activities.HistorialVentasActivity"
            android:parentActivityName=".activities.MainActivity" />
            
        <!-- Actividad del carrito de compras -->
        <activity
            android:name=".activities.CarritoActivity"
            android:parentActivityName=".activities.MainActivity" />
            
        <!-- Actividad para generar boletas/facturas -->
        <activity
            android:name=".activities.FacturaActivity"
            android:parentActivityName=".activities.MainActivity" />
            
        <!-- Actividad para crear/agregar productos -->
        <activity
            android:name=".activities.CrearProductoActivity"
            android:parentActivityName=".activities.MainActivity" />
            
        <!-- Actividad para gestión de proveedores -->
        <activity
            android:name=".activities.ProveedoresActivity"
            android:parentActivityName=".activities.MainActivity" />
            
        <!-- Actividad para alertas de stock bajo -->
        <activity
            android:name=".activities.AlertasStockActivity"
            android:parentActivityName=".activities.MainActivity" />
            
        <!-- Actividad principal - Dashboard de la ferretería -->
        <activity 
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Metadatos para fuentes -->
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
            
        <!-- Proveedor de archivos para compartir boletas/reportes -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.ferrovil.app.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths">
            </meta-data>
        </provider>
    </application>
</manifest>
